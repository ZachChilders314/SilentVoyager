<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="@color/primaryButtonPressedBorder" />
            <gradient android:angle="-90" android:startColor="@color/primaryButtonPressedStart" android:endColor="@color/primaryButtonPressedEnd"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="@color/primaryButtonFocusedBorder" />
            <gradient android:angle="-90" android:startColor="@color/primaryButtonFocusedStart" android:endColor="@color/primaryButtonFocusedEnd"  />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="@color/primaryButtonBorder" />
            <gradient android:angle="-90" android:startColor="@color/primaryButtonStart" android:endColor="@color/primaryButtonEnd" />
        </shape>
    </item>
</selector>