<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="1dip" android:color="@color/primaryButtonRegisterPressedBorder" />
            <gradient android:angle="-90" android:startColor="@color/primaryButtonRegisterPressedStart" android:endColor="@color/primaryButtonRegisterPressedEnd"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="1dip" android:color="@color/primaryButtonRegisterFocusedBorder" />
            <gradient android:angle="-90" android:startColor="@color/primaryButtonRegisterFocusedStart" android:endColor="@color/primaryButtonRegisterFocusedEnd"  />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="1dip" android:color="@color/primaryButtonRegisterBorder" />
            <gradient android:angle="-90" android:startColor="@color/primaryButtonRegisterStart" android:endColor="@color/primaryButtonRegisterEnd" />
        </shape>
    </item>
</selector>