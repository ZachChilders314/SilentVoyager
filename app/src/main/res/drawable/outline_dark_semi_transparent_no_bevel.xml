<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="0dip" />
            <stroke android:width="1dip" android:color="@color/outlineDarkSemiTransparentPressedBorder" />
            <gradient android:angle="-90" android:startColor="@color/outlineDarkSemiTransparentPressedStart" android:endColor="@color/outlineDarkSemiTransparentPressedEnd"  />
            <padding android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="0dip" />
            <stroke android:width="1dip" android:color="@color/outlineDarkSemiTransparentFocusedBorder" />
            <gradient android:angle="-90" android:startColor="@color/outlineDarkSemiTransparentFocusedStart" android:endColor="@color/outlineDarkSemiTransparentFocusedEnd"  />
            <padding android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="0dip" />
            <stroke android:width="1dip" android:color="@color/outlineDarkSemiTransparentBorder" />
            <gradient android:angle="-90" android:startColor="@color/outlineDarkSemiTransparentStart" android:endColor="@color/outlineDarkSemiTransparentEnd" />
            <padding android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp"/>
        </shape>
    </item>
</selector>